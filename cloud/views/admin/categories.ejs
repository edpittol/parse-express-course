<% include header %>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Products</h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-lg-6">
      <div class="box box-solid">
        <div class="box-body no-padding">
          <table class="table table-striped">
            <tr>
              <th>Name</th>
              <th style="width: 120px">Actions</th>
            </tr>
            <% for(var i = 0; i < categories.length; i++) { %>
            <tr>
              <td><%= categories[i].get('name') %></td>
              <td>
                <a class="btn btn-default" href="/admin/categories/<%= categories[i].id %>">
                  <i class="fa fa-edit"></i>
                </a>
                <a class="btn btn-default" href="/admin/categories/<%= categories[i].id %>/delete">
                  <i class="fa fa-times"></i>
                </a>
              </td>
            </tr>
            <% } %>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
    <div class="col-lg-6">
      <div class="box box-solid">
        <div class="box-header">
          <h3 class="box-title">
            <% if(editCategory.get('name')) { %>
              <%= editCategory.get('name') %>
            <% } else { %>
              New Category
            <% } %>
          </h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <form method="POST" action="">
            <% if(editCategory.createdAt) { %>
            <p><strong>Created at:</strong> <%= editCategory.createdAt %></p>
            <% } %>
            <div class="form-group">
              <label>Name</label>
              <input name="name" class="form-control" type="text" value="<%= editCategory.get('name') %>">
            </div>
            <div class="form-group pull-right">
              <input type="submit" value="Save" class="btn btn-primary">
            </div>
            <div class="clearfix"></div>
          </form>
        </div><!-- /.box-body -->
    </div>
  </div>
</section>

<% include footer %>